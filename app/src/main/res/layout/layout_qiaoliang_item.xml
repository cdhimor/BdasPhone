<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="cn.com.lxsoft.bdasphone.ui.browse.QiaoLiangListItemViewModel" />
        <variable
            name="viewModel"
            type="cn.com.lxsoft.bdasphone.ui.browse.QiaoLiangListItemViewModel" />
    </data>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    android:theme="@style/QLListItem"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    android:orientation="horizontal"
    binding:onClickCommand="@{viewModel.itemClick}">
    <ImageButton
        android:id="@+id/butIcon"
        style="@style/QLIconButton"
        android:layout_marginRight="16dp"
        android:scaleType="centerCrop"
        android:background="@{viewModel.drawableBack}"
        android:src="@{viewModel.drawableIcon}"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textMingCheng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorTextDark"
            android:layout_span="4"
            android:text="@{viewModel.mingCheng}"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textLuXian"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:maxWidth="100dp"
                android:background="@drawable/shape_rect_noborder_lightgray"
                android:layout_marginRight="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@{viewModel.luXian}"/>
            <TextView
                android:id="@+id/textLeiXing"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@drawable/shape_rect_noborder_lightgray"
                android:layout_marginRight="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@{viewModel.leiXing}"/>
            <TextView
                android:id="@+id/textDanWei"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@drawable/shape_rect_noborder_lightgray"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@{viewModel.info4}"/>
        </LinearLayout>
            <TextView
                android:id="@+id/textCKG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_dot_green"
                android:text="@{viewModel.jieGou}"/>
    </LinearLayout>
</LinearLayout>
</layout>