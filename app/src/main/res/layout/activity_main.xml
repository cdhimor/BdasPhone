<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="cn.com.lxsoft.bdasphone.ui.main.MainViewModel" />
        <variable
            name="viewModel"
            type="MainViewModel" />
    </data>
    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:binding="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawerLayout"
        android:fitsSystemWindows="true">
        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/qlListLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TopBarPrimary"
            android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/topPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentInsetStart="0dp"
            style="@style/TopBarPrimary"
            android:fitsSystemWindows="true"
            app:expandedTitleMarginBottom="0dp"
            app:titleEnabled="false"
            app:layout_scrollFlags="scroll"
            app:statusBarScrim="@android:color/transparent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_collapseMode="pin"
                android:layout_gravity="top"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp">
            <cn.com.lxsoft.bdasphone.ui.component.ToolBarBdas
                android:id="@+id/layout_toolbar_search"
                xmlns:lx="http://schemas.android.com/apk/res/cn.com.lxsoft.bdasphone"
                lx:type="search"
                style="@style/ToolBarTitle"/>
                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    style="@style/TopBarPrimary"
                        android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                        android:orientation="horizontal">
                    <ImageButton
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@mipmap/ic_launcher"
                        android:scaleType="centerInside"
                        android:background="@android:color/transparent"
                        binding:onClickCommand="@{viewModel.getInitData}"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TopBarPrimary"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="@{viewModel.userDanWeiInfo}"
                        android:textSize="16sp"
                        android:layout_marginLeft="16dp"
                        binding:onClickCommand="@{viewModel.dealLogin}"
                        />
                </LinearLayout>
            </LinearLayout>
        </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="120dp"
                    android:orientation="vertical">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns = "0,1,2,3"
        android:layout_marginTop="16dp">
        <TableRow>
            <ImageButton
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_browse_primary_64"
                android:background="@android:color/transparent"
                android:onClick="@{()->viewModel.onIconSelect(&quot;browse&quot;)}"/>
            <ImageButton
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_patrol_primary_64"
                android:background="@android:color/transparent"
                android:onClick="@{()->viewModel.onIconSelect(&quot;patrol&quot;)}"/>
            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_check_primary_64"
                android:background="@android:color/transparent"
                android:onClick="@{()->viewModel.onIconSelect(&quot;check&quot;)}"/>
            <ImageButton
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_test_primary_64"
                android:onClick="@{()->viewModel.onIconSelect(&quot;test&quot;)}"
                android:background="@android:color/transparent" />
        </TableRow>

        <TableRow android:orientation="vertical">
            <TextView
                style="@style/MainIconText"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:onClick="@{()->viewModel.onIconSelect(&quot;browse&quot;)}"
                android:text="桥梁浏览" />
            <TextView
                style="@style/MainIconText"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:onClick="@{()->viewModel.onIconSelect(&quot;patrol&quot;)}"
                android:text="日常巡查" />
            <TextView
                style="@style/MainIconText"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:onClick="@{()->viewModel.onIconSelect(&quot;check&quot;)}"
                android:text="经常检查" />
            <TextView
                style="@style/MainIconText"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="定期检查" />
        </TableRow>
        <TableRow
            android:layout_marginTop="8dp">
            <ImageButton
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_count_primary_64"
                android:background="@android:color/transparent"
                android:onClick="@{()->viewModel.onIconSelect(&quot;chart&quot;)}"/>
            <ImageButton
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_gis_primary_48"
                android:background="@android:color/transparent"
                android:onClick="@{()->viewModel.onIconSelect(&quot;gis&quot;)}"/>
            <ImageButton
                android:id="@+id/icon_test"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_maintain_primary_42dp"
                android:background="@android:color/transparent" />
            <ImageButton
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_engineer_primary_64dp"
                android:background="@android:color/transparent" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="56dp"
                android:gravity="center"
                android:text="统计信息"
                android:onClick="@{()->viewModel.onIconSelect(&quot;chart&quot;)}"
                style="@style/MainIconText"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="56dp"
                android:gravity="center"
                android:text="地理信息"
                android:onClick="@{()->viewModel.onIconSelect(&quot;gis&quot;)}"
                style="@style/MainIconText"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="56dp"
                android:gravity="center"
                android:text="养护决策"
                style="@style/MainIconText"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="56dp"
                android:gravity="center"
                android:text="工程师"
                style="@style/MainIconText"/>
        </TableRow>

    </TableLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/colorSplit"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        ></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        >
        <TextView
            android:layout_width="8dp"
            android:layout_height="32dp"
            android:layout_marginRight="16dp"
            android:background="@color/colorPrimary"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="基本信息"
            android:textColor="@color/black"
            android:textStyle="bold"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_tongji_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textColor="@color/black"
        android:lineSpacingExtra="4dp"
        ></TextView>
                    <LinearLayout
                        android:id="@+id/layoutChart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="16dp">
    <include
        android:id="@+id/includeChart"
        layout="@layout/layout_chart"
        binding:viewModel="@{viewModel.layoutChartViewModel}" />
                    </LinearLayout>
</LinearLayout>
            </ScrollView>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        android:layout_gravity="bottom"
        app:menu="@menu/navigation"
        app:itemIconTint="@color/sel_navmenu"
        app:itemTextColor="@color/sel_navmenu"
        android:fitsSystemWindows="true"
        binding:selectedID="@{viewModel.nActivityPosition}"
        binding:onNavigationItemSelected="@{viewModel.onNavigationItemSelected}"/>
        </android.support.design.widget.CoordinatorLayout>
        <LinearLayout
            android:id="@+id/id_LayoutDrawer"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:background="#fff"
            android:layout_gravity="end"
            android:orientation="vertical">
        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>
</layout>