<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TopBarPrimary">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:color">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TopBarEditTextSearch">
        <item name="android:background">@drawable/shape_rect_noborder_whitecolor</item>
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>
    <style name="viewWeight">
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_width">4dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="TopBarQuickChoose">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="TopBarLightFunc">
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/sel_radio_func</item>
        <item name="android:textColor">@drawable/sel_radio_func</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TopBarLightGray">
        <item name="android:background">@color/colorLightGray</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="QLIconButton">
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_width">72dp</item>
    </style>

    <style name="QLListItem">
        <item name="android:textColor">@color/colorLightBlack</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
